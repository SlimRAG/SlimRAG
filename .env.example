# SlimRAG Configuration Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Choose one of the following database backends:

# PostgreSQL (recommended for production)
DSN="postgres://user:password@localhost:5432/slimrag?sslmode=disable"

# DuckDB (for local development and testing)
# DSN="slimrag.db"              # File-based database
# DSN=":memory:"                # In-memory database (temporary)

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# Embedding Model Configuration
EMBEDDING_BASE_URL="https://api.openai.com/v1"
EMBEDDING_MODEL="text-embedding-3-small"

# Reranker Model Configuration (optional, improves search relevance)
RERANKER_BASE_URL="https://api.openai.com/v1"
RERANKER_MODEL="gpt-3.5-turbo"

# Assistant Model Configuration (for generating answers)
ASSISTANT_BASE_URL="https://api.openai.com/v1"
ASSISTANT_MODEL="gpt-3.5-turbo"

# OpenAI API Key (required if using OpenAI models)
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Alternative: Local Ollama Configuration
# EMBEDDING_BASE_URL="http://localhost:11434/v1"
# EMBEDDING_MODEL="nomic-embed-text"
# ASSISTANT_BASE_URL="http://localhost:11434/v1"
# ASSISTANT_MODEL="llama2"

# =============================================================================
# CHAT BOT CONFIGURATION (Optional)
# =============================================================================

# Telegram Bot Configuration
# Get token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN="1234567890:ABCdefGHIjklMNOpqrsTUVwxyz"

# Slack Bot Configuration
# Get tokens from your Slack App configuration
SLACK_BOT_TOKEN="xoxb-your-slack-bot-token"
SLACK_APP_TOKEN="xapp-your-slack-app-token"

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_PORT="5000"              # Port for HTTP server
SERVER_HOST="0.0.0.0"           # Host binding (0.0.0.0 for all interfaces)

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
MAX_WORKERS="3"                 # Number of concurrent embedding workers
RAG_LIMIT="40"                  # Maximum number of chunks to retrieve
RAG_TOP_N="10"                  # Number of top chunks for answer generation

# =============================================================================
# CHUNKING CONFIGURATION (Optional)
# =============================================================================
# These can be overridden by command-line flags or config files
# CHUNK_STRATEGY="adaptive"       # Chunking strategy: fixed, semantic, sentence, adaptive
# CHUNK_MAX_SIZE="1000"           # Maximum chunk size in characters
# CHUNK_MIN_SIZE="100"            # Minimum chunk size in characters
# CHUNK_OVERLAP="50"              # Overlap size in characters
# CHUNK_LANGUAGE="auto"           # Language: zh, en, auto

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL="info"                # Log level: debug, info, warn, error